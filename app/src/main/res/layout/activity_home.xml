<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F8"
    tools:context=".HomeActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#3F51B5"
        android:padding="14dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Menu Icon -->
        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="Menu"
            android:src="@drawable/menu_icon"
            app:tint="@color/white" />

        <!-- Welcome Text -->
        <TextView
            android:id="@+id/userNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Welcome, Ram Prasad!"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="16dp" />

        <!-- Notifications Icon -->
        <ImageView
            android:id="@+id/notificationIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/notifications_icon"
            app:tint="@android:color/white"
            android:contentDescription="Notifications" />
    </LinearLayout>

    <!-- Predictor Button -->
    <Button
        android:id="@+id/buttonPredictor"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:text="Predictor"
        android:textAllCaps="false"
        android:background="@drawable/rounded_button_bg"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Monitor Button -->
    <Button
        android:id="@+id/buttonMonitor"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:text="Monitor"
        android:textAllCaps="false"
        android:background="@drawable/rounded_button_bg"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonPredictor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Feedback Button -->
    <Button
        android:id="@+id/buttonFeedback"
        android:layout_width="280dp"
        android:layout_height="55dp"
        android:text="Feedback Entry"
        android:textAllCaps="false"
        android:background="@drawable/rounded_button_bg"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/buttonMonitor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
